<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of Movies</title>
</head>
<body>
    <div>
      <ul>
      <% movies.forEach(movie => {%>
        <li><%= movie.name %></li>
      <% });%>
      </ul>
    </div>
    <div>
        <form action="">
          <input type="submit" value="Switch to Have">
        </form>
  
        <form action="/movies/add">
          <input type="submit" value="Add to Movies">
        </form>
  
        <form action="">
          <input type="submit" value="Sort">
        </form>

        <form action="">
            <input type="submit" value="Search">
        </form>
    </div>
</body>
</html>