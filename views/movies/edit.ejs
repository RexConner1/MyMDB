<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title><%= movie.title %></title>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>

    <h1>Edit a Movie</h1>

    <form action="/movies/<%= movie.id %>?_method=PUT" method="POST">
        <div class="input">
            <label for="title">Title:</label>
            <input type="text" name="title" value="<%= movie.title %>" required>
        </div>

        <div class="input">
            <label for="year">Year:</label>
            <input type="number" name="year" value="<%= movie.year %>">
        </div>

        <div class="input">
            <label for="runTime">Run Time:</label>
            <input type="number" name="runTime" value="<%= movie.runTime %>">
        </div>

        <div class="input">
            <label for="description">Description:</label>
            <textarea type="text" name="description" value="<%= movie.description %>"></textarea>
        </div>

        <!-- <div class="input">
            <label for="wantOrHave">Want or Have?:</label>
            <select name="wantOrHave">
                <option value=0>Want</option>
                <option value=1>Have</option>
            </select>
        </div> -->

        <input type="submit" name="" value="Submit"/>
    </form>

    <form action="/movies/<%= movie.id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" />
    </form>

    <form action="/movies">
        <input type="submit" value="Return to Movies">
    </form>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>