<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <title>List of Games</title>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>

  <div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">First Air Date</th>
          <th scope="col">Seasons</th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% shows.forEach(show => { %>
        <tr>
          <th scope="row"><%= show.id %></th>
          <td><%= show.title %></td>
          <td><%= show.firstAirDate %></td>
          <td><%= show.seasons %></td>
          <td><a href="/shows/<%= show.id %>">Details</a></td>
          <td><a href="/shows/<%= show.id %>/edit">Edit/Delete</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <div>
      <!-- <form action="">
        <input type="submit" value="Switch to Want">
      </form> -->

      <form action="/shows/add">
        <input type="submit" value="Add to Shows">
      </form>

      <!-- <form action="">
        <input type="submit" value="Sort">
      </form> -->

      <!-- <form action="">
          <input type="submit" value="Search">
      </form> -->
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>